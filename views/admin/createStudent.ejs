<link rel="stylesheet" href="/adminCSS/login.css" media="screen" title="no title">

<div class="text-center" style="padding:50px 0">
	<div class="logo">Create a New Student</div>
	<!-- Main Form -->
	<div class="login-form-1">
		<form id="register-form" class="text-left" action="/admin/processCreateLogin">
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
						<label for="reg_username" class="sr-only">Student ID</label>
						<input type="text" class="form-control" id="reg_username" name="studentID" placeholder="Student ID">
					</div>
          <div class="form-group">
						<label for="reg_email" class="sr-only">Department</label>
						<input type="text" class="form-control" id="reg_email" name="department" placeholder="Department">
					</div>

					<div class="form-group login-group-checkbox">
						<input type="radio" class="" name="gender" id="male" placeholder="username" value="male">
						<label for="male">Male</label>

						<input type="radio" class="" name="gender" id="female" placeholder="username" value="female">
						<label for="female">Female</label>
					</div>

				</div>
				<button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
			</div>
		</form>
	</div>
	<!-- end:Main Form -->
</div>
