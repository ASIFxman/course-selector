<!-- ============================================================== -->
    <!-- Preloader -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Wrapper -->
    <!-- ============================================================== -->
    <div id="wrapper">
        <%- partial ('partials/dashboardNavbar.ejs') %>
        <!-- End Top Navigation -->
        <%- partial ('partials/dashboardSidebar.ejs') %>
        <!-- ============================================================== -->
        <!-- End Left Sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page Content -->
        <!-- ============================================================== -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Select An Action</h4> </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <ol class="breadcrumb">
                            <li><a href="/admin/section">Section</a></li>
                        </ol>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                  <div class="col-sm-6 col-xs-12">
                      <div class="white-box analytics-info">
                          <h3 class="box-title">Create</h3>
                          <p>
                            Create a new record in the database.
                          </p>
                          <ul class="list-inline two-part">
                            <li></li>
                              <li class="text-right"><button class="btn btn-primary" data-toggle="modal" data-target="#createModal">Create A New Section</button></li>
                          </ul>
                      </div>
                  </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="white-box analytics-info">
                            <h3 class="box-title">Manage</h3>
                            <p>
                              View and Edit database records.
                            </p>
                            <ul class="list-inline two-part">
                                <li></li>
                                <li class="text-right"><button class="btn btn-danger" data-toggle="modal" data-target="#manageModal">View and Edit Section</button></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
            <footer class="footer text-center"> 2017 &copy; Asif. Sume. Shakil.</footer>
        </div>
        <!-- ============================================================== -->
        <!-- End Page Content -->
        <!-- ============================================================== -->
    </div>
    <!-- /#wrapper -->
    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <form class="form" action="" method="post">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Create</h4>
            </div>
            <% if (department.length > 0) { %>
            <div class="modal-body">
              <div class="form-group">
                <label>Select Department</label>
                <select class="form-control form-control-line" name="editSectionIntakeDepartment">
                  <% _.each(department, function (eachDepartment) { %>
                    <option value="<%= eachDepartment.id %>"><%= eachDepartment.name %></option>
                  <% }) %>
                </select>
              </div>
              <div id="sectionIntakeEditContainer">
                <% if (department[0].intake.length > 0) { %>
                <div class="form-group">
                  <label>Select Intake</label>
                  <select class="form-control form-control-line" name="editSectionIntake">
                    <% _.each(department[0].intake, function (eachIntake) { %>
                      <option value="<%= eachIntake.id %>"><%= eachIntake.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label>Section Name</label>
                  <input class="form-control form-control-line" type="text" name="sectionName" placeholder="Eg. Section 1">
                </div>

                <% } else { %>
                  <p>No Intakes In This Department!</p>
                <% } %>
              </div>
            </div>
            <div id="editSectionIntakeFooter" class="modal-footer">
              <input type="submit" class="btn btn-primary" name="create" value="Submit">
            </div>
            <% } else { %>
              <div class="modal-body">
                <a href="/admin/department">Create a Department First!</a>
              </div>
            <% } %>
          </div>
        </form>
      </div>
    </div>

    <!-- Manage Modal -->
    <div class="modal fade" id="manageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <form class="form" action="" method="post">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Manage</h4>
            </div>
            <% if (department.length > 0) { %>
            <div class="modal-body">
              <div class="form-group">
                <label>Select Department</label>
                <select class="form-control form-control-line" name="editEditSectionIntakeDepartment">
                  <% _.each(department, function (eachDepartment) { %>
                    <option value="<%= eachDepartment.id %>"><%= eachDepartment.name %></option>
                  <% }) %>
                </select>
              </div>
              <div id="sectionIntakeEditEditContainer">
                <% if (department[0].intake.length > 0) { %>
                <div class="form-group">
                  <label>Select Intake</label>
                  <select class="form-control form-control-line" name="editEditSectionIntake">
                    <% _.each(department[0].intake, function (eachIntake) { %>
                      <option value="<%= eachIntake.id %>"><%= eachIntake.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div id="editSectionSelectContainer">

                </div>

                <% } else { %>
                  <p>No Intakes In This Department!</p>
                <% } %>
              </div>
            </div>
            <div id="editSectionIntakeFooter" class="modal-footer">
              <input type="submit" class="btn btn-danger" name="manage" value="Delete">
            </div>
            <% } else { %>
              <div class="modal-body">
                <a href="/admin/department">Create a Department First!</a>
              </div>
            <% } %>
          </div>
        </form>
      </div>
    </div>
    <script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function(event) {
      $.get('/admin/getSection', {
        intakeId: $("[name=editEditSectionIntake]").val()
      }, function (data) {
        if (data.status === 'success') {
          var dataToWrite = '';
          dataToWrite += '<div class="form-group">';
            dataToWrite += '<label>Select Section</label>';
            dataToWrite += '<select name="editSectionSelect" class="form-control form-control-line">';
            for (var i = 0; i < data.section.length; i++) {
              dataToWrite += '<option value="' + data.section[i].id + '">' + data.section[i].name + '</option>';
            }
            dataToWrite += '</select>';
          dataToWrite += '</div>';

          $("#editSectionSelectContainer").html(dataToWrite);
        }
      });
    });
    </script>
